
<DataEncode>:
	name:"encodes"
	dataset:dataset
	encodings:encodings
	email:email
	label1:label1
	label2:label2
	check1:check1

	GridLayout:
		cols:1
		size:root.width, root.height
		Label:
			text:"Choose the encoding model"
			font_size:"40sp"
		
		GridLayout:
			cols:2 

			Label:
				id:label1
				text:"cnn"
				font_size:"30sp"

			CheckBox:
				id:check1
				group:"a_group"			
				on_active:root.cb_active(self.active)
			Label:
				id:label2
				text:"hog"
				font_size:"30sp"

			CheckBox:
				active:False
				group:"a_group"

			Label:
				text:"Image Dataset Path"
				font_size:"30sp"
				size:self.texture_size

			TextInput:
				id:dataset
				multiline:False
				font_size:"30sp"			

			Label:
				text:"Encoded File Name"
				font_size:"30sp"
				size:self.texture_size				

			TextInput:
				id:encodings
				multiline:False
				font_size:"30sp"
			
			Label:
				text:"E-mail"
				font_size:"30sp"
				size:self.texture_size				

			TextInput:
				id:email
				multiline:False
				font_size:"30sp"


			Button:
				text:"Encode"
				on_press:
					background_color:(1,0,0,1)
				font_size:"30sp"
				on_release:
					root.btn()
			Button:
				text:"Next"
				size: self.texture_size
				on_press:
					background_color:(1,0,0,1)
				font_size:"30sp"
				on_release:
					app.root.current = "main"
					root.manager.transition.direction = "left"
					root.btn()
		Button:
			text:"Load Default"
			on_press:
				background_color:(1,0,0,1)
			font_size:"30sp"
			size_hint:(0.3,0.2)
			on_release:
				root.preset_fields()		


<Pop>:
	title: "Encoding Progress"
	title_size: "40sp"
	size_hint: (None,None)
	size: (400,400)
	auto_dismiss: False
	GridLayout:
		rows:2
		Label:
			text:"All Done!"
			size_hint_x:0.8
			font_size:"40sp"
			
		Button:
			text:"Close"
			size_hint:.5 ,.5
			font_size:"40sp"
			on_press:
				root.dismiss()
						


<MainWindow>:
	
	name:"main"
	label1:label1
	label2:label2
	check1:check1

	GridLayout:
		cols:1
		size:root.width, root.height
		Label:
			text:"Choose the encoding model"
			font_size:"40sp"	



		GridLayout:
			cols:2 

			Label:
				id:label1
				text:"cnn"
				font_size:"30sp"

			CheckBox:
				id:check1
				group:"a_group"			
				on_active:root.cb_active(self.active)
			Label:
				id:label2
				text:"hog"
				font_size:"30sp"

			CheckBox:
				active:False
				group:"a_group"


			Button:
				text:"Build Database"
				on_press:
					background_color:(1,0,0,1)
				font_size:"30sp"
				on_release:
					app.root.current = "encodes"
					root.manager.transition.direction = "right"
			Button:
				text:"Start"
				on_press:
					background_color:(1,0,0,1)
				font_size:"30sp"
				on_release:
					root.attendance()
			
